@model SignupViewModel

<h2>ثبت‌نام</h2>
<br />
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
    <br />
}

<form asp-action="Signup" method="post">
    <div class="form-group">
        <label asp-for="FullName">نام و نام خانوادگی</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">ایمیل</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Password">پسورد</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary mt-2">ثبت‌نام</button>
    <br /><br />
    <p>قبلاً حساب ساختی؟ <a asp-action="Login" asp-controller="Auth">وارد شو</a></p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
